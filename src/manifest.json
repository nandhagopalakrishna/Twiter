{
  "manifest_version": 3,
  "name": "Twitter AI Reply",
  "version": "1.0.0",
  "description": "Generate AI-powered replies for tweets using OpenAI's GPT model",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://twitter-ai-reply-api.onrender.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content.tsx"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}